@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Witaj @Model.Name </h1>
    <form methot="post">
        <div class="form-row">
            <div class="form-group col-md">
                <label asp-for="Address.Street"></label><br />
                <input asp-for="Address.Street" /><br />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group col-md">
                <label asp-for="Address.Number">Numer:</label><br />
                <input asp-for="Address.Number" /><br />
                <span asp-validation-for="Address.Number" class="text-danger"></span>
            </div>
            <div class="form-group col-md">
                <label asp-for="Address.ZipCode">Kod Pocztowy:</label><br />
                <input asp-for="Address.ZipCode" /><br />
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group col-md">
                <label asp-for="Address.City">Miasto:</label><br />
                <input asp-for="Address.City" /><br />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
        </div>
       
        <button type="submit" class="btn btn-primary">Zatwierdź</button>
    </form>
</div>
